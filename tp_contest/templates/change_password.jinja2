{% extends "base.jinja2" %}
{% block content %}
{% if request.session.peek_flash('error') %}
  {% for error in request.session.pop_flash('error') %}
    <div class="alert alert-danger" role="alert">{{ error }}</div>
  {% endfor %}
{% endif %}
<div class="alert alert-dark" role="alert">
  更改密碼
</div>
<form action="" method="post">
  <div class="form-group">
    {{ password_form.old_password.label }}
    {{ password_form.old_password(class='form-control', placeholder='輸入舊密碼')}}
  </div>
  <div class="form-group">
    {{ password_form.new_password.label }}
    {{ password_form.new_password(class='form-control', placeholder='輸入新密碼')}}
  </div>
  <div class="form-group">
    {{ password_form.new_password_confirm.label }}
    {{ password_form.new_password_confirm(class='form-control', placeholder='再次輸入新密碼')}}
  </div>
  <button type="submit" class="btn btn-primary">更改密碼</button>
</form>
{% endblock content%}