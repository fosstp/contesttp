{% extends "base.jinja2" %}
{% block content %}
<h2 class="mx-auto">發佈消息</h2>
<form action="" method="post" enctype="multipart/form-data">
  <div class="form-group">
    {{ competition_news_form.title.label }}
    {{ competition_news_form.title(class='form-control', placeholder='標題')}}
  </div>
  <div class="form-group">
    {{ competition_news_form.content.label }}
    {{ competition_news_form.content(class='form-control', placeholder='內容')}}
  </div>
  <div class="form-group">
    {{ competition_news_form.files.label }}
    {{ competition_news_form.files(class='form-control')}}
  </div>
  <div class="form-check">
      {{ competition_news_form.is_sticky(class='form-check-input')}}
      {{ competition_news_form.is_sticky.label(class='form-check-label') }}
    </div>
  <button type="submit" class="btn btn-primary mt-3">發佈</button>
</form>
{% endblock content%}